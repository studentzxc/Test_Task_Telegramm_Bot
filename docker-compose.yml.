services:
  bot:
    build: .
    environment:
      - BOT_TOKEN=7161824860:AAHXWqRszRhT5Z4Ti5Eu2vuGC40XLAsQ1mI
      - DB_CONNECTION=Server=db;Database=Telegramm Test Task;User Id=sa;Password=YourStrong@Passw0rd;
    depends_on:
      db:
